<%= form_for @flat do |f| %>
<div class="container">
  <div class="row flex">
    <div class="col-sm-6 margin-auto">
      <div class="flat-form">

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_area :address, class: 'form-control', id: 'flat_address' %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :number_of_guests %>
          <%= f.text_area :number_of_guests, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :price_per_night %>
          <%= f.text_area :price_per_night, class: 'form-control' %>
        </div>

        <div class="flex space-between">
          <%= f.submit "Add Flat", class: 'btn btn-primary' %>
          <%= link_to "Cancel", :back, {:class=>"btn btn-danger"} %>
        </div>
        <% end %>

      </div>
    </div>

  </div>
</div>
