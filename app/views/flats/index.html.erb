<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>ALL OUR FLATS</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p>All our flats <%= @flats.count %></p>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-4">
        <div class="flat-card">
          <%# <div class="flat-card-image" style="background-image: url('<%= %>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex">
                <i class="fas fa-users mr-2"></i><span><%= flat.number_of_guests %></span>
                <i class="fas fa-dollar-sign mr-2"></i><%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to 'More info', flat_path(flat) %>
            <%= link_to "Edit", edit_flat_path(flat) %>
          <%= link_to "Remove",
            flat_path(flat),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
